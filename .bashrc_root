# ~/.bashrc: executed by bash(1) for non-login shells.

# Note: PS1 and umask are already set in /etc/profile. You should not
# need this unless you want different defaults for root.
# PS1='${debian_chroot:+($debian_chroot)}\h:\w\$ '
# umask 022

# You may uncomment the following lines if you want `ls' to be colorized:
# export LS_OPTIONS='--color=auto'
# eval "`dircolors`"
# alias ls='ls $LS_OPTIONS'
# alias ll='ls $LS_OPTIONS -l'
# alias l='ls $LS_OPTIONS -lA'
#
# Some more alias to avoid making mistakes:
# alias rm='rm -i'
# alias cp='cp -i'
# alias mv='mv -i'

alias maj-pbxitc='/etc/init.d/majauto.sh'
alias maj-securite='/root//security_iptables'
alias ip-network='nano /etc/network/interfaces'
alias config-vpn='nano /etc/pptpd.conf'
alias config-client-vpn='nano /etc/ppp/chap-secrets'
alias start-vpn='/etc/init.d/pptpd start'
alias stop-vpn='/etc/init.d/pptpd stop'
alias config-extensions='nano /var/www/html/admin/modules/core/etc/extensions.conf'
alias config-users='nano /etc/asterisk/users.conf'
alias config-sip='nano /var/www/html/admin/modules/core/etc/sip.conf'
alias config-voicemail='nano /etc/asterisk/voicemail.conf'
alias config-music='nano /var/www/html/admin/modules/core/etc/musiconhold.conf'
alias parefeu-on='ufw enable'
alias parefeu-off='ufw disable'
alias config-noip='/etc/install-noip.sh'
alias info-noip='noip2 -S'
alias info-temp='/opt/vc/bin/vcgencmd measure_temp'
alias change-pass='passwd userpbx'
alias stop-itcpbx='sudo shutdown -h now'
alias reboot-itcpbx='sudo reboot'
alias info-port='sudo nano /etc/asterisk/info-port.conf'
alias restart-asterisk='sudo amportal restart'
alias reset-network='sudo /etc/reset-network'
alias info-interface='sudo /sbin/ifconfig -a'
alias info-itcpbx='cat /proc/cpuinfo'
alias info-parefeu='sudo iptables -n -L'
alias terminal='asterisk -rvvvvvvvv'
